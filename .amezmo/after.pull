
# Full path: <your repo>.amezmo/after.pull
set -e;

echo "Running composer install (${COMMIT_ID})";

composer \
    --no-ansi \
    --no-interaction \
    --optimize-autoloader \
    --no-progress \
    --no-dev \
    --profile \
    install

php artisan migrate:refresh --no-interaction --no-ansi --force --seed;

cp -r public/img/cover_images public/storage;
cp -r public/img/profile_pictures public/storage;